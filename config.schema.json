{
  "pluginAlias": "Envisalink-Ademco",
  "pluginType": "platform",
  "singular": false,
  "footerDisplay": "Envisalink Ademco Panel Configuration",
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Name",
        "type": "string",
        "default": "Envisalink-Ademco"
      },
      "host": {
        "title": "Envisalink Host IP address",
        "type": "string",
        "default": "192.168.1.XXX",
        "required": true,
        "format": "ipv4"
      },
      "port": {
        "title": "Envisalink Host IP Port address",
        "type": "integer",
        "default": 4025,
        "required": true
      },
      "deviceType": {
        "title": "Device Model",
        "type": "string",
        "required": true,
        "default": "Honeywell VISTA-10P",
        "oneOf": [
          {
            "title": "Honeywell VISTA-10P",
            "enum": [
              "10P"
            ]
          },
          {
            "title": "Honeywell VISTA-15P",
            "enum": [
              "15P"
            ]
          },
          {
            "title": "Honeywell VISTA-20P",
            "enum": [
              "20P"
            ]
          },
          {
            "title": "Honeywell VISTA-128FBP",
            "enum": [
              "128FBP"
            ]
          }
        ]
      },
      "password": {
        "title": "Password",
        "type": "string",
        "required": true,
        "default": "user",
        "description": "Password to Envisalink server."
      },
      "pin": {
        "title": "Global Alarm PIN/Code",
        "type": "string",
        "pattern": "^[0-9]+$",
        "required": true,
        "default": 1234,
        "description": "Your global system alarm PIN. <b>Please Note:</b> The PIN must be 4 digits, 0–9 .",
        "minLength": 4,
        "maxLength": 4
      },
      "openZoneTimeout": {
        "title": "Zone timeout value in second",
        "type": "integer",
        "default": 30,
        "description": "Lenght of time to wait before a zone is considered closed. Default: 30 seconds.",
        "minimum": 5,
        "maximum": 120
      },
      "heartbeatInterval": {
        "title": "Heartbeat value in second",
        "type": "integer",
        "default": 30,
        "description": "Heartbeat interval to check for disconnected Envisalink session. Default: 30 seconds.",
        "minimum": 10,
        "maximum": 600
      },
      "commandTimeOut": {
        "title": "Command timeout in second",
        "type": "integer",
        "default": 10,
        "description": "Lenght of time to wait for alarm command to return. Default: 10 seconds.",
        "minimum": 5,
        "maximum": 30
      },
      "autoReonnect": {
        "title": "Automatic re-connect to Envisakit server",
        "type": "boolean",
        "default": true,
        "description": "Automatic reconnect to Envisakit server, if session is terminated."
      },
      "sessionWatcher": {
        "title": "Enable session watcher for Envisakit server",
        "type": "boolean",
        "default": true,
        "description": "Enable session watcher for drop connections. The heartbeat value will determine the internal to checking for connection."
      },
      "chimeToggle": {
        "title": "Display a switch in Homekit to toggle chime sound On/Off",
        "type": "boolean",
        "default": false,
        "description": "Create a switch in HomeKit to allow turning On/Off of the chime sound on the Ademco panel."
      },
      "batteryRunTime": {
        "title": "Expected runtime of battery backup.",
        "type": "integer",
        "description": "Run time of battery backup in hours.",
        "minimum": 1,
        "maximum": 168
      },
      "maintenanceMode": {
        "title": "Disabled connection to Envisalink module for maintenance. <b>WARNING:</b> This will diasable all updates and operations.",
        "type": "boolean",
        "default": false,
        "description": "Place the plug-in in maintenance mode, to allow testing and/or replacement of the Envisalink module without impacting previous automations or filling logs with error messages."
      },
      "partitions": {
        "description": "List of partitions",
        "type": "array",
        "maxItems": 7,
        "items": {
          "title": "Alarm partitions",
          "type": "object",
          "properties": {
            "name": {
              "title": "Name",
              "required": true,
              "type": "string",
              "default": "House"
            },
            "partitionNumber": {
              "title": "Number",
              "required": false,
              "type": "string",
              "description": "Direct managment of specific partition number. <b>Note:</b> Not needed for non-partition systems. "
            },
            "partitionPin": {
              "title": "Partition PIN/Code",
              "type": "string",
              "pattern": "^[0-9]+$",
              "required": false,
              "description": "If arming with a non-global PIN. <b>Please Note:</b> The PIN must be 4 digits, 0–9. This value will override the global PIN value for this parttition.",
              "minLength": 4,
              "maxLength": 4
            }
          }
        }
      },
      "zones": {
        "description": "Alarm zones to monitor, manage and display in HomeKit",
        "type": "array",
        "maxItems": 128,
        "items": {
          "title": "Zones",
          "type": "object",
          "properties": {
            "name": {
              "title": "Zone Name",
              "type": "string",
              "required": true
            },
            "partition": {
              "title": "Sensor Partition Number",
              "type": "string",
              "required": true
            },
            "zoneNumber": {
              "title": "Zone Number",
              "type": "string",
              "required": false
            },
            "sensorType": {
              "title": "Sensor Type",
              "type": "string",
              "required": true,
              "oneOf": [
                {
                  "title": "Carbon Monoxide",
                  "enum": [
                    "co"
                  ]
                },
                {
                  "title": "Door",
                  "enum": [
                    "door"
                  ]
                },
                {
                  "title": "Glassbreak",
                  "enum": [
                    "glass"
                  ]
                },
                {
                  "title": "Leak",
                  "enum": [
                    "leak"
                  ]
                },
                {
                  "title": "Motion",
                  "enum": [
                    "motion"
                  ]
                },
                {
                  "title": "Smoke",
                  "enum": [
                    "smoke"
                  ]
                },
                {
                  "title": "Window",
                  "enum": [
                    "window"
                  ]
                }
              ]
            },
            "bypassEnabled": {
              "title": "Zone Bypass Enabled",
              "type": "boolean",
              "required": false,
              "description": "Allow this zone to be Bypass by HomeKit."
            }
          }
        }
      },
      "bypass": {
        "description": "Display a switch for bypassing zones that are being monitored.",
        "type": "array",
        "maxItems": 1,
        "items": {
          "title": "Bypass Options",
          "type": "object",
          "properties": {
            "enabledbyPass": {
              "title": "Display a switch in Homekit to enable and disable zone bypass",
              "type": "boolean",
              "default": false
            },
            "quickbypass": {
              "title": "Panel support quick (i.e: force) bypass",
              "type": "boolean",
              "required": false
            }
          }
        }
      },
      "speedKeys": {
      "description": "Display Speed Keypad keys",
      "type": "array",
      "maxItems": 4,
      "items": {
          "title": "Speed keys options",
          "type": "object",
          "properties": {
            "name": {
              "title": "Speed Key Label",
              "type": "string",
              "required": true,
              "maxLength": 12
            },
            "speedcommand": {
            "title": "Speed Key Code",
            "type": "string",
            "required": true,
            "oneOf": [
                {
                  "title": "A Key",
                  "enum": [
                    "A"
                  ]
                },
                {
                  "title": "B Key",
                  "enum": [
                    "B"
                  ]
                },
                {
                  "title": "C Key",
                  "enum": [
                    "C"
                  ]
                },
                {
                  "title": "D key",
                  "enum": [
                    "D"
                  ]
                },
                {
                  "title": "Custom Macro Command",
                  "enum": [
                    "custom"
                  ]
                }
              ]      
            },
            "command": {
              "title": "Custom macro command",
              "type": "string",
              "required": false,
              "description": "Command to send to alarm panel. An escape charater of @PIN will replace with master PIN/Code"
            }
          }
        }
      }
    }
  },
  "layout": [
    {
      "type": "section",
      "title": "General Setting",
      "expandable": true,
      "expanded": true,
      "items": [
        "name",
        "host",
        "port",
        "deviceType",
        "password",
        "pin"
      ]
    },
    {
      "type": "section",
      "title": "Partition Information",
      "expandable": true,
      "expanded": true,
      "items": [{
        "key": "partitions",
        "type": "array",
        "orderable": false,
        "items": [
          "partitions[].name",
          "partitions[].partitionNumber",
          "partitions[].partitionPin"
        ]
      }]
    },
    {
      "type": "section",
      "title": "Zone Information",
      "expandable": true,
      "expanded": false,
      "items": [
        {
        "key": "zones",
        "type": "array",
        "orderable": false,
        "buttonText": "Add Zone",
        "items": [
          "zones[].name",
          "zones[].partition",
          "zones[].zoneNumber",
          "zones[].sensorType",
          "zones[].bypassEnabled"
          ]
        }
      ]
    },
    {
      "type": "section",
      "title": "Keypad Button Options (Optional)",
      "expandable": true,
      "expanded": false,
      "items": [
        "chimeToggle",
        {
          "key": "bypass",
          "title": "Zone Bypass",
          "description": "Display a Homekit switch for bypassing zones that are being monitored.",
          "type": "array",
          "items": [
            "bypass[].enabledbyPass",
            "bypass[].quickbypass"
          ]
        },
        {
          "key": "speedKeys",
          "title": "Speed Key (Macro) keys",
          "description": "These Keys (A,B,C and/or D) are usually on the left side of the alarm keypad. They execute pre-stored automated sequences in the system's memory or input custom automated input sequence that imitates keypad inputs.",
          "type": "array",
          "orderable": false,
          "buttonText": "Add Speed Key",
          "items": [
            "speedKeys[].name",
            "speedKeys[].speedcommand",
            "speedKeys[].command"
          ]
        }
      ]
    },
    {
      "type": "section",
      "title": "Additional Setting (Optional)",
      "expandable": true,
      "expanded": false,
      "items": [
        "openZoneTimeout",
        "sessionWatcher",
        "heartbeatInterval",
        "commandTimeOut",
        "autoreconnect",
        "batteryRunTime",
        "maintenanceMode"
      ]
    }
  ]
}