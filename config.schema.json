{
  "pluginAlias": "Envisalink-Ademco",
  "pluginType": "platform",
  "singular": false,
  "footerDisplay": "Envisalink Ademco Panel Configuration",
  "schema": {
    "type": "object",
    "properties": {
        "name": {
          "title": "Name",
          "type": "string",
          "default": "Envisalink-Ademco"
        },
        "host": {
          "title": "Envisalink Host IP address",
          "type": "string",
          "default": "192.168.1.XXX",
          "required": true,
          "format": "ipv4"
        },
        "port": {
            "title": "Envisalink Host IP Port address",
            "type": "integer",
            "default": 4025,
            "required": true
        },
        "deviceType": {
          "title": "Device Model",
          "type": "string",
          "required": true,
          "default": "Honeywell Vista"
        },
        "password": {
          "title": "Password",
          "type": "string",
          "required": true,
          "default": "user",
          "description": "Password to Envisalink server"
        },
        "pin": {
          "title": "Alarm PIN",
          "type": "integer",
          "required": true,
          "default": 1234,
          "description": "Your local alarm PIN"
        },
        "openZoneTimeout": {
          "title": "Zone timeout value in milliseconds",
          "type": "integer",
          "default": 30000,
          "description": "Lenght of time to wait before a zone is considered closed"
        },
        "commandTimeOut": {
          "title": "Command timeout in milliseconds",
          "type": "integer",
          "default": 10000,
          "description": "Lenght of time to wait for alarm command to return."
        },
        "autoreconnect": {
          "title": "Automatic re-connect to Envisakit server",
          "type": "boolean",
          "default": true,
          "description": "Automatic reconnect to Envisakit server, if session is terminated. "
        },
        "partitions": {
          "description": "List of partitions",
            "type": "array",
            "items": {
              "title": "Alarm partitions",
              "type": "object",
              "properties": {
                "name": {
                "title": "Partition name",
                "required": true,
                "type": "string",
                "default": "House"  
              }
            }
          }
        },
        "zones": {
            "description": "Alarm zones to monitor and display in Homekit",
            "type": "array",
            "items": {
              "title": "Zones",
              "type": "object",
              "properties": {
                "name": {
                  "title": "Zone Name",
                  "type": "string"
                },
                "sensorType": {
                  "title": "Sensor Type",
                  "type": "string",
                  "oneOf": [
                    { "title": "Door", "enum": ["door"] },
                    { "title": "Leak", "enum": ["leak"] },
                    { "title": "Motion", "enum": ["motion"] },
                    { "title": "Smoke", "enum": ["smoke"] },
                    { "title": "Window", "enum": ["window"] }
                  ]
                },
                "partition": {
                  "title": "Sensor Partition Number",
                  "type": "string"
                },
                "zoneNumber": {
                  "title": "Zone Number",
                  "type": "string"
                }
              }
            }
          }  
        }
      }
}